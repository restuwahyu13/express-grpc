{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strict": false,
		"alwaysStrict": false,
		"noUnusedParameters": false,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["bin/**/*.ts", "src/**/*.ts"],
	"exclude": ["./node_modules", "./dist", "./coverage", "./__tests__/**/*.{spect.ts, test.ts}"]
}
