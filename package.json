{
	"name": "express-grpc",
	"version": "1.0.0",
	"description": "example CRUD using GRPC (Google Remote Protocol)",
	"main": "server.ts",
	"files": [
		"dist/**/*.{js}"
	],
	"scripts": {
		"clean": "rimraf dist",
		"compiler": "npm run clean && tsc --pretty",
		"build": "npm run compiler",
		"start:node": "node dist/server.js",
		"start:grpc": "node dist/src/grpc/server.js",
		"node:dev": "nodemon -w *.ts -e ts -x ts-node --files -H -T bin/client.ts",
		"grpc:dev": "nodemon -w *.ts -e ts -x ts-node --files -H -T bin/server.ts",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage --no-cache",
		"lint": "eslint src/**/*.{ts,spec.ts,test.ts} --fix",
		"format": "prettier src/**/*.{ts,spec.ts,test.ts} --write",
		"lint:fix": "npm run format && npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/restuwahyu13/express-grpc"
	},
	"keywords": [
		"grpc",
		"express",
		"nodejs"
	],
	"engines": {
		"node": ">=10",
		"npm": ">=6"
	},
	"author": {
		"name": "Restu Wahyu Saputra",
		"email": "restuwahyu1@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"@grpc/grpc-js": "^1.2.3",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"eslint-config-standard": "^16.0.2",
		"express": "^4.17.1",
		"google-protobuf": "^3.14.0",
		"helmet": "^4.3.1",
		"mongoose": "^5.11.12",
		"shortid": "^2.2.16"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.0",
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.9",
		"@types/dotenv": "^8.2.0",
		"@types/eslint": "^7.2.6",
		"@types/express": "^4.17.11",
		"@types/google-protobuf": "^3.7.4",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^26.0.20",
		"@types/mongoose": "^5.10.3",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.21",
		"@types/nodemon": "^1.19.0",
		"@types/prettier": "^2.1.6",
		"@types/protobufjs": "^6.0.0",
		"@types/rimraf": "^3.0.0",
		"@types/shortid": "0.0.29",
		"@typescript-eslint/eslint-plugin": "^4.13.0",
		"@typescript-eslint/parser": "^4.13.0",
		"eslint": "^7.18.0",
		"eslint-config-airbnb-typescript-prettier": "^4.1.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jest-formatting": "^2.0.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"grpc-tools": "^1.10.0",
		"grpc_tools_node_protoc_ts": "^5.1.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.1",
		"tslib": "^2.1.0",
		"typescript": "^4.1.3"
	}
}
